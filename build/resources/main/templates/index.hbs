{{#partial "content"}}

    <h1>Job List</h1>

    {{#if jobOpenings}}
        {{#each jobOpening }}
         <div class="well">
            <p>Place {{id}}:</p>
               <ul>
                   <li>{{title}}</li>
                   <li>{{location}}</li>
                   <li>{{employer}}</li>
                   <li>{{description}}</li>
                   <li>{{contact}}</li>
                   <li>{{salary}}</li>
                   <li>Created At: {{createdAt}}</li>
               </ul>
            <p>{{ title }} <a href="/jobs/{{id}}">read more...</a></p>
         </div>
        {{/each}}
    {{else}}
        <p>No place added!</p>
    {{/if}}
{{/partial}}

{{> layout.hbs}}